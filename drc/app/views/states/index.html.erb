<h1>Estados</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Nome</th>
    <th>Sigla</th>
    <th></th>
    <th></th>
  </tr>

  <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.acronym %></td>
        <td><%= link_to '',edit_state_path(state),  :class=>"icon-edit" %></td>
        <td><%= link_to '',state , :class=>"icon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'Novo estado', new_state_path, :class=>"btn btn-primary btn-large" %>
